<h1><%= @cocktail.name %></h1>
<p>More details about this cocktail</p>

<h2>Ingredients</h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.ingredient.name %> | <%= link_to "Delete ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this ingredient from this cocktail?" } %></li>
    <% end %>
  </ul>


<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

