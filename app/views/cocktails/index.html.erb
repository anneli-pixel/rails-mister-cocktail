<div class="header">
  <h1>All Cocktails</h1>
  <p>Click on a cocktail to see the recipe</p>
</div>

<div class="cards">
  <div class="card-category" style="background-color: rgba(120,120,120,0.3)">
    <%= link_to "Add Cocktail", new_cocktail_path %>
  </div>
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?cocktail)">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>
</div>

